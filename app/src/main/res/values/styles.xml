<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/polaris_color_purple_dark</item>
        <item name="colorPrimaryDark">@color/polaris_color_purple_darker</item>
        <item name="colorAccent">@color/polaris_color_indigo</item>
        <item name="android:colorBackground">@color/polaris_color_sky_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PolarisButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/polaris_color_indigo_dark</item>
    </style>

    <style name="PolarisHeading">
        <item name="android:textColor">@color/polaris_color_indigo_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
